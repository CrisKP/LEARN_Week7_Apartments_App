<table>
  <thead>
    <tr>
      <th>Street1</th>
      <th>Street2</th>
      <th>City</th>
      <th>Postal code</th>
      <th>State</th>
      <th>Country</th>
      <th>Manager</th>
      <th>Phone</th>
      <th>Contact hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.street1 %></td>
        <td><%= apartment.street2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.postal_code %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <td><%= apartment.manager %></td>
        <td><%= apartment.phone %></td>
        <td><%= apartment.contact_hours %></td>
        <td><%= link_to image_tag(apartment.image.url(:small)), apartment%></td>
        <td><%= link_to 'Show', apartment %></td>
        <% if user_signed_in? %>
          <% if @ability.can? :update, apartment, user_id: current_user.id %>
            <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
            <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
